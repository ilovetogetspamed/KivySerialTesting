SerialTestingForm:

<SerialTestingForm>:
    orientation: 'vertical'
    cmd_to_send: cmd_to_send
    cmd_results: cmd_results
    TextInput:
        id: cmd_to_send
        size_hint_y: 10
        text: 'Type a command here and then click the Go button or just press <Enter>.'
        multiline: False
        on_text_validate: root.send_command(self.text)
    Button:
        text: 'Go'
        size_hint_y: 10
        on_press: root.send_command(root.cmd_to_send.text)
    CodeInput:
        id: cmd_results
        size_hint_y: 100
        text: ''